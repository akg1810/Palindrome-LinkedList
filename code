class Solution
{
    //Function to check whether the list is palindrome.
    boolean isPalindrome(Node head) 
    {
        if (head==null)
        {
            return true ;
        }
        Node mid = middleElement(head);
        Node last = reverse(mid);
        Node curr = head;
        
        while( last != null)
        {
            if (curr.data!=last.data)
            {
                return false ;
            }
            
            curr = curr.next ;
            last = last.next ;
        }
        return true ;
    }
    
    Node middleElement(Node head)
    {
        Node slow = head ;
        Node fast = head ;
        
        while ( fast!=null && fast.next!=null )
        {
            slow = slow.next ;
            fast = fast.next.next ;
        }
        return slow ;
    }
    
    Node reverse(Node head)
    {
        Node prev = null ;
        Node curr = head ;
         
        while (curr!=null)
        {
            Node temp = curr.next ;
            curr.next = prev ;
            prev = curr ;
            curr = temp ;
        }
        return prev ;
    }
}

